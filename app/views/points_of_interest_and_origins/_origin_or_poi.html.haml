.row.gx-0.mb-3.align-items-center.border-bottom.pb-2
  .col-md-3.ps-2
    = link_to resource.name.truncate(75), [@ltn, resource], class: "text-decoration-none"
  .col-md-9.ps-2
    .small_map.mt-3.mb-3{
      data:
        {
          controller: "location",
          location_lat_value: resource.lat,
          location_lng_value: resource.lng,
          location_persisted_value: true,
          location_origin_or_poi_value: resource.class.name.underscore.downcase,
          location_edit_mode_value: false
        }
      }

